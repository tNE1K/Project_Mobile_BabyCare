<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".Baby_nutrition_age">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/body"
        android:background="@color/white"
        android:layout_marginTop="@dimen/view_height_large"
        app:layout_constraintTop_toTopOf="@id/main"/>
    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logo_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/body"
        app:layout_constraintLeft_toLeftOf="@id/body"
        android:layout_marginStart="@dimen/margin_small"
        android:background="@drawable/img_border"/>
    <ImageView
        android:layout_width="@dimen/view_height_standard"
        android:layout_height="@dimen/view_height_standard"
        android:id="@+id/logo"
        android:src="@drawable/babynutrition"
        app:layout_constraintTop_toTopOf="@id/logo_container"
        app:layout_constraintBottom_toBottomOf="@id/logo_container"
        app:layout_constraintLeft_toLeftOf="@id/logo_container"
        app:layout_constraintRight_toRightOf="@id/logo_container"/>
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logo_container"
        app:layout_constraintBottom_toTopOf="@id/body"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/margin_super_large"
        android:fontFamily="@font/itimregular"
        android:shadowColor="@color/white"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="5"
        android:text="Dinh dưỡng"
        android:textColorHighlight="@color/white"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"/>


    <TableLayout
        android:id="@+id/tl_nutritionInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/body"
        app:layout_constraintLeft_toLeftOf="@id/main"
        app:layout_constraintBottom_toTopOf="@id/tv_infoSourceHeader"
        android:stretchColumns="0, 1, 2">
        <TableRow>
            <TextView
                android:text="Tuổi con"
                android:textSize="@dimen/text_standard"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@color/blue"
                android:layout_marginRight="1dp"/>
            <TextView
                android:text="Lượng sữa"
                android:textSize="@dimen/text_standard"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@color/blue"
                android:layout_marginRight="1dp"/>
            <TextView
                android:text="Số cữ/ngày"
                android:textSize="@dimen/text_standard"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@color/blue"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="1 ngày"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="7 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="10 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="2 ngày"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="14 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="10 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="3 ngày"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="38 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="10 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="4 ngày"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="58 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="10 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="7 ngày"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="65 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="10 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="1 &#8594; 3 tuần"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="30 &#8594; 90 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="10 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="3 tuần &#8594; 3 tháng"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="90 &#8594; 120 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="6 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="3 &#8594; 6 tháng"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="120 &#8594; 230 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="5 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="6 &#8594; 9 tháng"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="170 &#8594; 240 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="6 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="9 &#8594; 12 tháng"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="200 &#8594; 240 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="4 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="12 tháng trở lên"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="240 &#8594; 300 ml"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:text="4 cữ"
                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/tv_infoSourceHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source:"
        android:textStyle="bold"
        android:textSize="@dimen/text_standard"
        app:layout_constraintTop_toBottomOf="@id/tl_nutritionInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_infoSourceBody"/>

    <TextView
        android:id="@+id/tv_infoSourceBody"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_height_standard"
        android:text="- https://hellobacsi.com\n- https://vinmec.com\n- Và tham khảo các nguồn trên mạng"
        android:textSize="@dimen/text_small"
        app:layout_constraintTop_toBottomOf="@id/tv_infoSourceHeader"
        app:layout_constraintLeft_toRightOf="@id/tv_infoSourceHeader"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Luu"/>




    <Button
        android:id="@+id/btn_back"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:text="Quay về"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_infoSourceBody"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:backgroundTint="@color/light_blue"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="@dimen/margin_super_large"
        android:layout_marginBottom="@dimen/margin_large"/>
    <Button
        android:id="@+id/btn_Luu"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Tính theo cân nặng"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rounded_button"
        app:backgroundTint="@color/blue"
        android:layout_marginRight="@dimen/margin_super_large"
        android:layout_marginBottom="@dimen/margin_large"/>

</androidx.constraintlayout.widget.ConstraintLayout>