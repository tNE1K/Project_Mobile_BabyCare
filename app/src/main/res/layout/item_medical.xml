<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_medicalHistoryInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_medicalStartDay"
        android:background="@drawable/rounded_textbox"
        android:backgroundTint="@color/light_pink"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_medicalStartDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Start day"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="@id/v_medicalHistoryInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_medicalEndDay"/>
    <TextView
        android:id="@+id/tv_medicalEndDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="End day"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/v_medicalHistoryInfo"
        app:layout_constraintLeft_toRightOf="@id/tv_medicalStartDay"
        app:layout_constraintRight_toLeftOf="@id/IV_babyArrow"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:id="@+id/IV_babyArrow"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toTopOf="@id/v_medicalHistoryInfo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_medicalStartDay"
        android:paddingLeft="@dimen/padding_super_small"
        android:paddingRight="@dimen/padding_super_small"/>




</androidx.constraintlayout.widget.ConstraintLayout>