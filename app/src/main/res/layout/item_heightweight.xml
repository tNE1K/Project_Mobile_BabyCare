<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_heightWeightInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_textbox"
        android:backgroundTint="@color/light_pink"
        app:layout_constraintBottom_toBottomOf="@id/tv_addDay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_addDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Ngày thêm"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_heightWeight"
        app:layout_constraintTop_toTopOf="@id/v_heightWeightInfo" />

    <TextView
        android:id="@+id/tv_heightWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Height/Weight"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tv_addDay"
        app:layout_constraintRight_toLeftOf="@id/IV_babyArrow"
        app:layout_constraintTop_toTopOf="@id/v_heightWeightInfo" />

    <ImageView
        android:id="@+id/IV_babyArrow"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/padding_super_small"
        android:paddingRight="@dimen/padding_super_small"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@id/tv_addDay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_heightWeightInfo" />


</androidx.constraintlayout.widget.ConstraintLayout>