<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_babyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Your baby here"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IV_babyIgnore"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/text_small"
        android:paddingRight="@dimen/text_small"
        android:src="@drawable/minus"
        app:layout_constraintBottom_toBottomOf="@id/tv_babyName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A9A9A9"
        app:layout_constraintTop_toBottomOf="@id/tv_babyName" />

    <Button
        android:id="@+id/btnAddBaby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bot_button"
        android:text="Thêm con yêu"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="@color/sofia"
        app:layout_constraintTop_toBottomOf="@id/line" />


</androidx.constraintlayout.widget.ConstraintLayout>