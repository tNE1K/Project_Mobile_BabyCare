<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/body_hwitem"
        android:layout_width="345dp"
        android:layout_height="65dp"
        android:background="@drawable/border_itemwh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="TextView"
        android:textSize="@dimen/text_medium"
        app:layout_constraintBottom_toBottomOf="@id/body_hwitem"
        app:layout_constraintStart_toStartOf="@+id/body_hwitem"
        app:layout_constraintTop_toTopOf="@+id/body_hwitem" />

    <TextView
        android:id="@+id/txtcccn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:text="TextView"
        android:textSize="@dimen/text_medium"
        app:layout_constraintBottom_toBottomOf="@id/body_hwitem"
        app:layout_constraintEnd_toEndOf="@+id/body_hwitem"
        app:layout_constraintTop_toTopOf="@+id/body_hwitem" />

</androidx.constraintlayout.widget.ConstraintLayout>